extends layout

block content
  div#home
    h1 Upload your deck. We'll analyze it! 

    form(action='analyze', method='POST')
      .form-group
        .input-group
          input.form-control.input-lg(type='url', name='url', id='url', autofocus=true, placeholder='e.g. http://www.hearthhead.com/deck=10036/mage-minion')
          span.input-group-btn
            button.btn.btn-default.btn-lg(type='submit') Analyze