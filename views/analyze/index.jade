extends ../layout



block content
	div
		h2= hero
		strong your card list...
		each card in cards
			p= card.name + ' x' + card.number

		script.
			$(document).ready(function() {
				var cardList = '#{_.map(cards, function(num){ return cards.number + ', '; });}';
				alert(cardList);
			});
	if user
		.alert.alert-success.animated.flipInX
			i.fa.fa-check
			strong You are logged in.